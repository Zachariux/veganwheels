<div class="container white-content-box">
  <div class="row">
    <div class="col-12">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>FOOD</strong></li>
        <% @order.cart.order_items.each do |item| %>
            <p><%=item.menu_item.name%></p>
            <p><%=item.menu_item.description%></p>
        <%end%>
        <li><strong>TOTAL</strong> <%= to_pounds(@order.total_price)  %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>30 minutes</strong></p>
    </div>
  </div>
</div>