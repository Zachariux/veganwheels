function createCart(innerHTML) {
    const signUpButton = document.getElementById('sign_up');
    const userIcon = document.getElementById('user_icon');
    const navSection = document.getElementById('nav_section');
    if (document.body.contains(signUpButton)) {
        signUpButton.remove();
        navSection.innerHTML = innerHTML;
        navSection.classList.remove("navigation__links--4","padding-small");
    } else if (document.body.contains(userIcon)){
        userIcon.remove();
        navSection.innerHTML = innerHTML;
    } else {
        navSection.innerHTML = innerHTML;
        navSection.classList.remove("navigation__links--4","padding-small");
    }
}
    
function createCartModal(innerHTML) {
    const modalBg = document.getElementsByClassName('modal-cart')[0];
    modalBg.innerHTML = innerHTML;
}

function setCancelButton() {
    const modalCancelButton = document.getElementById('cart-modal-close');
    const modalBg = document.getElementsByClassName('modal-cart')[0];
    modalCancelButton.addEventListener('click', () => {
        modalBg.classList.remove('bckg-active');
    })
}

createCart('<%= j render 'order_items/cart', order_item: @order_item%>');
createCartModal('<%= j render 'partials/modal_cart', cart: @cart%>');
setCancelButton();