function createCart(innerHTML) {
    if (window.innerWidth > 575 && window.innerWidth <= 1199) {
        const navSection = document.getElementById('nav_section_1'); 
        navSection.innerHTML = innerHTML;
        document.querySelectorAll('#nav_section_1 .nav_cart')[0].classList.add('nav_cart--tablet')

    } else if (window.innerWidth <= 575) {
        const navSection = document.getElementById('nav_section_3');
        navSection.innerHTML = innerHTML;
        document.querySelectorAll('#nav_section_3 .nav_cart')[0].classList.add('nav_cart--mobile')
    } else {
        const navSection = document.getElementById('nav_section_2');
        navSection.innerHTML = innerHTML;
        document.querySelectorAll('#nav_section_2 .nav_cart')[0].classList.add('nav_cart--normal')
    }
}
    
function createCartModal(innerHTML) {
    const modalBg = document.getElementsByClassName('modal-cart')[0];
    modalBg.innerHTML = innerHTML;
}

function setCancelButton() {
    const modalCancelButton = document.getElementById('cart-modal-close');
    const modalBg = document.getElementsByClassName('modal-cart')[0];
    modalCancelButton.addEventListener('click', () => {
        modalBg.classList.remove('bckg-active');
    })
}

function successMessage() {
    swal({
    title: "Thanks!",
    text: "Your selection has been added to the basket.",
    icon: "success",
    buttons: false,
    timer: 1500
    });
}
createCart('<%= j render 'order_items/cart', cart: @cart%>');
createCartModal('<%= j render 'partials/modal_cart', cart: @cart%>');
successMessage();
setCancelButton();