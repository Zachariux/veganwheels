<%= semantic_form_for [:admin, @menu_item], builder: ActiveAdmin::FormBuilder do |f|%>
    <%= f.semantic_errors %>
    <%= f.inputs "Menu" do %>
        <%= f.input :section, :as => :select, :collection => Section.where(restaurant_id: current_admin_user.restaurant)%>
        <%= f.input :restaurant, :as => :select, :collection => Restaurant.where(id: current_admin_user.restaurant)%>
        <%= f.input :name %>
        <%= f.input :price, :label => "Prince in pence" %>
        <%= f.input :description %>
        <%= f.input :is_active %>
    <% end %>
    <%= f.actions %>
<% end %>