<%= semantic_form_for [:admin, @menu_item], builder: ActiveAdmin::FormBuilder do |f|%>
    <%= f.semantic_errors %>
    <%= f.inputs "Menu" do %>
        <%= f.input :section%>
        <%= f.input :restaurant%>
        <%= f.input :name %>
        <%= f.input :price, :label => "Prince in pence" %>
        <%= f.input :description %>
        <%= f.input :is_active, :label => "Active" %>
    <% end %>
    <%= f.actions do %>
      <%= f.action(:submit) %>
      <%= f.action(:cancel) %>
    <% end %>
<% end %>