<%= semantic_form_for [:admin, @section], builder: ActiveAdmin::FormBuilder do |f|%>
    <%= f.semantic_errors %>
    <%= f.inputs "Section" do %>
        <%= f.input :restaurant%>
        <%= f.input :name %>
        <%= f.input :order, :label => "Order in the menu", :as => :select, :collection => 1..10%>
    <% end %>
    <%= f.actions %>
<% end %>