<%= semantic_form_for [:admin, @menu_option], builder: ActiveAdmin::FormBuilder do |f| %>
    <%= f.semantic_errors %>
    <%= f.inputs "Side" do %>
        <%= f.input :menu_item %>
        <%= f.input :name %>
        <%= f.input :price, :label => "Prince in pence" %>
        <%= f.input :is_single, :label => "Single selection only" %>
        <%= f.input :description, :label => "Description (max 50 characters)" %>
    <% end %>
    <%= f.actions do %>
      <%= f.action(:submit) %>
      <%= f.action(:cancel) %>
    <% end %>
<% end %>