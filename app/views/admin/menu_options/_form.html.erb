<%= semantic_form_for [:admin, @menu_option], builder: ActiveAdmin::FormBuilder do |f|%>
    <%= f.semantic_errors %>
    <%= f.inputs "Menu sides" do %>
        <%= f.input :menu_item, :as => :select, :collection => MenuItem.where(restaurant_id: current_admin_user.restaurants.each {|r| r.id})%>
        <%= f.input :name %>
        <%= f.input :price, :label => "Prince in pence" %>
        <%= f.input :description, :label => "Description (max 50 characters)" %>
    <% end %>
    <%= f.actions %>
<% end %>
