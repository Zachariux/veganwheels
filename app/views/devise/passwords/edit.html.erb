<style>
body {
  font-family: "Open Sans", sans-serif;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.5;
}
</style>
<div class="container white-content-box">
  <div class="row">
    <div class="col-12">      
      <%= link_to :back do%>
        <p class="uppercase dashboard__box--link">
        <i class="fas fa-chevron-left"></i>
        Back</p>
      <%end%>
      <div class="vwform mx-auto">
        <h1 class="vwform__heading">Change your password</h1>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password,
                        label: "New password",
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" },
                        label_html: { class: "vwform__field" } %>
            <%= f.input :password_confirmation,
                        label: "Confirm your new password",
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        label_html: { class: "vwform__field" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Change my password", class: "button__fill button__fill--green" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
