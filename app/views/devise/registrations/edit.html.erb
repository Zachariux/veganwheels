<div class="container white-content-box">
  <div class="row">
    <div class="col-12">
      <%= link_to :back do%>
        <p class="uppercase dashboard__box--link">
        <i class="fas fa-chevron-left"></i>
        Back</p>
      <%end%>

      <div class="vwform mx-auto">
        <h1 class="vwform__heading">Edit account</h1>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true,
                              label_html: { class: "vwform__field" } %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :first_name,
                              # required: true,
                              autofocus: true,
                              label_html: { class: "vwform__field" }%>
          <%= f.input :last_name,
                              # required: true,
                              autofocus: true,
                              label_html: { class: "vwform__field" }%>
          <%= f.input :phone,
                              # required: true,
                              autofocus: true,
                              label_html: { class: "vwform__field" }%>
          <%= f.input :email,
                              # required: true,
                              autofocus: true,
                              label_html: { class: "vwform__field" }%>
          <%= f.input :street_address,
                              # required: true,
                              autofocus: true,
                              label_html: { class: "vwform__field" }%>
          <%= f.input :city,
                              # required: true,
                              autofocus: true,
                              label_html: { class: "vwform__field" }%>
          <%= f.input :county,
                              # required: true,
                              autofocus: true,
                              label_html: { class: "vwform__field" }%>
          <%= f.input :postcode,
                              # required: true,
                              autofocus: true,
                              label_html: { class: "vwform__field" }%>
          <%= f.input :password,
                      hint: "Leave it blank if you don't want to change it.",
                      required: false,
                      input_html: { autocomplete: "new-password" },
                      label_html: { class: "vwform__field" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" },
                      label_html: { class: "vwform__field" } %>
          <%= f.input :current_password,
                      hint: "We need your current password to confirm your changes.",
                      required: true,
                      input_html: { autocomplete: "current-password" },
                      label_html: { class: "vwform__field" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", class: "button__fill button__fill--sgreen" %>
        </div>
      <% end %>
      <div class="vwform__area">
        <p class="vwform__field">If you would like to permanently delete your account with Vegan Wheels please click the button below.</p>
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button__fill button__fill--sgreenl" %>
      </div>
      </div>
    </div>
  </div>
</div>