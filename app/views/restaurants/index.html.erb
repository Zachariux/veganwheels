<div class="container white-content-box">
  <% if @search.present? %>
    <div class="row">
      <div class="results-bar">
        <h3 class="results-bar__text">Restaurants near you</h3>
        <h3 class="results-bar__text"><%= @postcode%></h3>
      </div>
    </div>
  <%end%>
  <div class="cards">
    <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant) do %>
          <div class="card card--<%= restaurant.imagekey %>">
            <div class="card__title">
              <% restaurant.name.split.each do |word| %>
                <h1><%=word%></h1>
              <%end%>
            </div>
            <div class="card__mask card__mask--<%= restaurant.imagekey %>">
              <%#=image_tag('restaurant.jpg')%>
              <%= cl_image_tag restaurant.photo.key, crop: :fill %>

            </div>
          </div>
      <%end%>
    <%end%>
  </div>
</div>