<div class="footer">
    <div class="container">
        <div class="row footer__border">
            <div class="col-12 col-lg-4 footer__column">
                <div class="footer__column--box">
                    <div class="footer__column--box">
                        <%= link_to "Restaurants Admin", admin_dashboard_path %>
                        <%= link_to "Rider Portal", rider_dashboard_path %>
                        <div class="links">
                            <a href="https://www.instagram.com/veganwheels_glasgow/" target="_blank"><i class="fab fa-instagram"></i></a> 
                            <a href="https://business.facebook.com/VeganWheelie/" target="_blank"><i class="fab fa-facebook-square"></i></a> 
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4 footer__column">
                <div class="footer__column--box">
                    <%= link_to "FAQs", faqs_path %>
                    <%= link_to "Terms and Conditions", terms_path %>
                    <%= link_to "Privacy Policy", privacy_path %>
                    <%= link_to "Illustrations", "https://absurd.design/", target: "_blank" %>
                </div>
            </div>
            <div class="col-12 col-lg-4 footer__column">
                <div class="footer__column--box">
                    <p class="title">Contact us</p>
                    <div class="email">
                        <i class="fas fa-envelope"></i>
                        <p><%= Business.first.email %></p>
                    </div>
                    <div class="phone">
                        <i class="fas fa-phone-square-alt"></i>
                        <p><%= Business.first.phone %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>